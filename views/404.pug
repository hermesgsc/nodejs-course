doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{pageTitle}
    style
      | body {
      |   font-family: Arial, sans-serif;
      |   background-color: #f4f4f9;
      |   color: #333;
      |   margin: 0;
      |   padding: 0;
      | }
      | nav ul {
      |   list-style-type: none;
      |   padding: 0;
      | }
      | nav ul li {
      |   display: inline;
      |   margin-right: 20px;
      | }
      | nav ul li a {
      |   color: #4CAF50;
      |   text-decoration: none;
      |   font-size: 18px;
      | }
      | main {
      |   padding: 20px;
      |   text-align: center;
      | }
      | h1 {
      |   font-size: 100px;
      |   color: #4CAF50;
      | }
      | h2 {
      |   font-size: 24px;
      | }

  body
    header
      nav
        ul
          li
            a(href="/") Home
          li
            a(href="/admin/add-product") Add product

    main
      h1 404
      h2 Page not found
