doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{shopTitle}
    style
      | body {
      |   font-family: Arial, sans-serif;
      |   background-color: #f4f4f9;
      |   color: #333;
      |   margin: 0;
      |   padding: 0;
      | }
      | header {
      |   background-color: #4CAF50;
      |   padding: 1em;
      | }
      | nav ul {
      |   list-style-type: none;
      |   padding: 0;
      | }
      | nav ul li {
      |   display: inline;
      |   margin-right: 20px;
      | }
      | nav ul li a {
      |   color: white;
      |   text-decoration: none;
      |   font-size: 18px;
      | }
      | main {
      |   padding: 20px;
      | }
      | h1 {
      |   color: #333;
      | }

  body
    header
      nav
        ul
          li
            a(href="/") Home
          li
            a(href="/admin/add-product") Add product

    main
      h1 My products
      p List of all products
      ul
        each product in products
          li #{product.title}  